{
  "description": "et initialConsideration should create Issue Initial Consideration Directions task",
  "enabled": true,
  "jurisdiction": "EMPLOYMENT",
  "caseType": "ET_EnglandWales",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": {
      "key": "WaSystemUser"
    },
    "ccd": [
      {
        "eventId": "INITIATE_CASE_DRAFT",
        "state": "AWAITING_SUBMISSION_TO_HMCTS",
        "caseData": {
          "template": "minimal-draft-case.json"
        }
      }
    ]
  },
  "tests": [
    {
      "request": {
        "credentials": {
          "key": "WaSystemUser"
        },
        "input": {
          "eventMessages": [
            {
              "destination": "RestEndpoint",
              "template": "ccd-event-message.json",
              "replacements": {
                "EventId": "initialConsideration",
                "NewStateId": "Accepted",
                "AdditionalData": {
                  "Data": {
                    "etICCanProceed": true,
                    "etICHearingAlreadyListed": false,
                    "etICHearingNotListedList": [
                      "Seek comments on the video hearing",
                      "UDL hearing"
                    ],
                    "etInitialConsiderationRule27": {
                      "etICRule27ClaimToBe": "Dismissed in full",
                      "etICRule27Direction": [
                        "No jurisdiction"
                      ],
                      "etICRule27NumberOfDays": 5
                    }
                  }
                }
              }
            }
          ]
        }
      },
      "expectations": [
        {
          "credentials": {
            "key": "WaSystemUser"
          },
          "status": 200,
          "numberOfTasksAvailable": 1,
          "numberOfRolesAvailable": 4,
          "taskData": {
            "template": "task-response.json",
            "replacements": {
              "tasks": [
                {
                  "name": "Issue Initial Consideration Directions",
                  "task_state": "unassigned",
                  "warnings": false,
                  "work_type_id": "routine_work",
                  "minor_priority": 500,
                  "major_priority": 5000
                }
              ]
            }
          },
          "roleData": {
            "roles": [
              {
                "role_name": "allocated-admin-caseworker",
                "role_category": "ADMIN",
                "permissions": [
                  "Read",
                  "Own",
                  "Manage",
                  "Claim",
                  "Unclaim",
                  "UnclaimAssign",
                  "CompleteOwn",
                  "CancelOwn"
                ],
                "authorisations": []
              },
              {
                "role_name": "hearing-centre-admin",
                "role_category": "ADMIN",
                "permissions": [
                  "Read",
                  "Own",
                  "Manage",
                  "Claim",
                  "Unclaim",
                  "UnclaimAssign",
                  "CompleteOwn",
                  "CancelOwn"
                ],
                "authorisations": []
              },
              {
                "role_name": "hearing-centre-team-leader",
                "role_category": "ADMIN",
                "permissions": [
                  "Read",
                  "Own",
                  "Claim",
                  "Unclaim",
                  "Manage",
                  "Assign",
                  "Unassign",
                  "Complete",
                  "Cancel"
                ],
                "authorisations": []
              },
              {
                "role_name": "task-supervisor",
                "permissions": [
                  "Read",
                  "Own",
                  "Manage",
                  "Claim",
                  "Unclaim",
                  "Assign",
                  "Unassign",
                  "Complete",
                  "Cancel"
                ],
                "authorisations": []
              }
            ]
          }
        }
      ]
    }
  ]
}
