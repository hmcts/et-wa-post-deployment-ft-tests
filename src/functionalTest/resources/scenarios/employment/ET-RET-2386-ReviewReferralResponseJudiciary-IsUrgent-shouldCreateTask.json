{
  "description": "ET replyToReferral should create an urgent ReviewReferralResponseJudiciary task",
  "enabled": true,
  "jurisdiction": "EMPLOYMENT",
  "caseType": "ET_EnglandWales",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": "WaSystemUser",
    "ccd": [
      {
        "eventId": "INITIATE_CASE_DRAFT",
        "state": "AWAITING_SUBMISSION_TO_HMCTS",
        "caseData": {
          "template": "minimal-draft-case.json",
          "replacements": {
            "referralCollection": [{"value": {"isUrgent": "Yes"}}]
          }
        }
      }
    ]
  },
  "test": {
    "request": {
      "credentials": "WaSystemUser",
      "input": {
        "eventMessages": [
          {
            "destination": "RestEndpoint",
            "template": "ccd-event-message.json",
            "replacements": {
              "EventId": "replyToReferral",
              "NewStateId": "Submitted",
              "AdditionalData": {
                "Data": {
                  "referralCollection": [
                    {
                      "value": {
                        "referCaseTo": "Judge",
                        "referralSubject": "Amend claim",
                        "isUrgent": "Yes"
                      }
                    }
                  ]
                }
              }
            }
          }
        ]
      }
    },
    "expectations": [
      {
        "credentials": "WaSystemUser",
        "status": 200,
        "numberOfTasksAvailable": 1,
        "numberOfRolesAvailable": 5,
        "taskData": {
          "template": "task-response.json",
          "replacements": {
            "tasks": [
              {
                "id": "{$VERIFIER-UUID}",
                "name": "Review Referral Response - Amend claim",
