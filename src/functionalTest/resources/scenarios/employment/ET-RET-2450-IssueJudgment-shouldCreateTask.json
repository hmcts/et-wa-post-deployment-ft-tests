{
  "description": "ET createReferral should create a IssueJudgment and a ReviewReferralAdmin task",
  "enabled": true,
  "jurisdiction": "EMPLOYMENT",
  "caseType": "ET_EnglandWales",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": "WaSystemUser",
    "ccd": [
      {
        "eventId": "INITIATE_CASE_DRAFT",
        "state": "AWAITING_SUBMISSION_TO_HMCTS",
        "caseData": {
          "template": "minimal-draft-case.json",
          "replacements": {
            "isUrgent": "Yes"
          }
        }
      }
    ]
  },
  "test": {
    "request": {
      "credentials": "WaSystemUser",
      "input": {
        "eventMessages": [
          {
            "destination": "RestEndpoint",
            "template": "ccd-event-message.json",
            "replacements": {
              "EventId": "createReferral",
              "NewStateId": "Accepted",
              "AdditionalData": {
                "Data": {
                  "referralCollection": [{
                    "value": {
                      "referCaseTo": "Admin",
                      "referralSubject": "Judgment",
                      "isUrgent": "No"
                    }
                   }
                  ]
                }
              }
            }
          }
        ]
      }
    },
    "expectations": [
      {
        "credentials": "WaSystemUser",
        "status": 200,
        "numberOfTasksAvailable": 2,
        "numberOfRolesAvailable": 4,
        "taskData": {
          "template": "task-response.json",
          "replacements": {
            "tasks": [
              {
                "id": "{$VERIFIER-UUID}",
                "name": "Issue Judgment",
                "type": "IssueJudgment",
                "task_state": "unassigned",
                "task_system": "SELF",
                "security_classification": "PUBLIC",
                "task_title": "Issue Judgment",
                "execution_type": "Case Management Task",
                "jurisdiction": "EMPLOYMENT",
                "case_type_id": "ET_EnglandWales",
                "case_id": "{$GENERATED_CASE_ID}",
                "case_category": "Employment",
                "case_name": "George Jetson v Cosmo Spacely",
                "auto_assigned": false,
                "warnings": false,
                "warning_list": {
                  "values": []
                },
                "case_management_category": "Employment",
                "work_type_id": "hearing_work",
                "work_type_label": "Hearing work",
                "permissions": {
                  "values": [
                    "Read",
                    "Own",
                    "Manage",
                    "Cancel",
                    "Complete",
                    "Claim",
                    "Unclaim",
                    "Assign",
                    "Unassign"
                  ]
                },
                "description": "[Review Judgment Referral,then issue relevant correspondence](cases/case-details/${[CASE_REFERENCE]}/trigger/generateCorrespondence/generateCorrespondence1)",
                "role_category": "ADMIN",
                "minor_priority": 500,
                "major_priority": 5000
