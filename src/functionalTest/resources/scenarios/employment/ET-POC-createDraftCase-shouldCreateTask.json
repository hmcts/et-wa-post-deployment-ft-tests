{
  "description": "et create draft case should create a draftCaseCreated task",
  "enabled": true,
  "jurisdiction": "EMPLOYMENT",
  "caseType": "ET_EnglandWales",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": "WaSystemUser",
    "ccd": [
      {
        "eventId": "INITIATE_CASE_DRAFT",
        "state": "",
        "caseData": {
          "template": "draft-case-created.json"
        }
      }
    ]
  },
  "test": {
    "request": {
      "credentials": "WaSystemUser",
      "input": {
        "eventMessages": [
          {
            "destination": "RestEndpoint",
            "template": "ccd-event-message.json",
            "replacements": {
              "EventId": "INITIATE_CASE_DRAFT",
              "NewStateId": "AWAITING_SUBMISSION_TO_HMCTS"
            }
          }
        ]
      }
    },
    "expectations": [
      {
        "credentials": "WaSystemUser",
        "status": 200,
        "numberOfTasksAvailable": 1,
        "numberOfRolesAvailable": 2,
        "taskData": {
          "template": "task-response.json",
          "replacements": {
            "tasks": [
              {
                "name": "Draft Case Created",
                "task_state": "unassigned",
                "warnings": false
              }
            ]
          }
        },
        "roleData": {
          "roles": [
            {
              "role_name": "judge",
              "role_category": "JUDICIAL",
              "permissions": [
                "Read",
                "Own",
                "Claim",
                "CompleteOwn",
                "CancelOwn",
                "Unclaim",
                "UnclaimAssign"
              ],
              "authorisations": []
            },
            {
              "role_name": "task-supervisor",
              "permissions": [
                "Read",
                "Assign",
                "Unassign",
                "Manage",
                "Cancel"
              ],
              "authorisations": []
            }
          ]
        }

      }
    ]
  }
}
