{
  "description": "WA when createMultipleTasks message is sent it should create two tasks (firstTask and secondTask)",
  "enabled": true,
  "jurisdiction": "WA",
  "caseType": "WaCaseType",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": "WaSystemUser",
    "ccd": [
      {
        "eventId": "CREATE",
        "caseData": {
          "template": "minimal-appeal-started.json"
        }
      }
    ]
  },
