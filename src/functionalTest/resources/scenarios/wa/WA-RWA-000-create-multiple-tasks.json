            "template": "minimal-ccd-event-message.json",
            "replacements": {
              "EventId": "createMultipleTasks",
              "NewStateId": "appealCreated",
              "AdditionalData": {
                "Data": {
                  "appealType": "protection"
                }
              }
            }
          }
        ]
      }
    },
